{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-tailwind",
            "type": "shell",
            "command": "tailwindcss -i src/ui/static/input.css -o src/ui/static/main.css -w",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Rebuilding...",
                    "endsPattern": "Done in"
                }
            }
        }
    ]
}